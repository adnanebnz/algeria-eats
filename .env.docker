# Application Settings
APP_NAME="Algeria Eats"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (Docker)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=algeria_eats
DB_USERNAME=algeria_eats
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Broadcasting
BROADCAST_DRIVER=log

# Cache
CACHE_DRIVER=redis

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=redis

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis (Docker)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Using Mailpit for local development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@algeria-eats.com"
MAIL_FROM_NAME="${APP_NAME}"

# Docker Ports (customize these if needed)
APP_PORT=80
DB_PORT=3306
REDIS_PORT=6379
PHPMYADMIN_PORT=8080
MAILPIT_DASHBOARD_PORT=8025
MAILPIT_SMTP_PORT=1025
